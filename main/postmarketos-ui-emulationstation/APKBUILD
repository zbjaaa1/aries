# Maintainer: WeirdTreeThing <bradyn127@protonmail.com>
pkgname=postmarketos-ui-emulationstation
pkgver=1
pkgrel=0
pkgdesc="(Wayland) UI for selecting and playing games with a controller."
arch="all"
url="https://postmarketos.org/"
license="GPL-3.0-or-later"
options="!check"
depends="postmarketos-base-ui-cage emulationstation retroarch foot libretro-fceumm libretro-snes9x"
source="10-emulationstation.sh es_systems.cfg"
_pmb_groups="seat"

package() {
	install -Dm755 "$srcdir"/10-emulationstation.sh \
		-t "$pkgdir"/etc/tinydm.d/env-wayland.d
	install -Dm644 "$srcdir"/es_systems.cfg \
		-t "$pkgdir"/etc/emulationstation
}
