# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=libqaccessibilityclient
pkgver=99999_git20250212
pkgrel=0
_commit="9c92db92fdc5fc7d267b310476197d12c40a077f"
pkgdesc="Accessibilty tools helper library, used e.g. by screen readers"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/libqaccessibilityclient"
license="LicenseRef-KDE-Accepted-LGPL AND LGPL-2.1-only AND LGPL-3.0-only"
makedepends="
	extra-cmake-modules
	qt6-qtbase-dev
	samurai
	"
checkdepends="
	dbus
	xvfb-run
	"
_repo_url="https://invent.kde.org/libraries/libqaccessibilityclient.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-27/libqaccessibilityclient-$_commit.tar.xz"
subpackages="$pkgname-dev"
options="!check" # Broken

builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	dbus-run-session -- xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
4057740f587d77355ab1931827c1bfbc0b4b60d7a9848ae16c3dbaa25fe9f215d901f15cafea674813ba9adc1fdcd79118759e96cb660d28cfe77e1bcbccaab0  libqaccessibilityclient-9c92db92fdc5fc7d267b310476197d12c40a077f.tar.xz
"
