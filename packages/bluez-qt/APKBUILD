# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=bluez-qt
pkgver=99999_git20250324
pkgrel=0
_commit="83ba1bf5ee4b457dbde4250da46fbfa8f5e49a13"
arch="all !armhf" # armhf blocked by qt6-qtdeclarative
pkgdesc="Qt wrapper for Bluez 5 DBus API"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	samurai
	"
_repo_url="https://invent.kde.org/frameworks/bluez-qt.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-04-02/bluez-qt-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc"
options="!check" # Multiple tests either hang or fail completely

options="!check"
builddir="$srcdir/bluez-qt-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5ef25b84c03b92099ede0e3595cb2905571e2fd2a4165ce3e86f533cf571d65364b37b534cacde75fe556dd82cd3efcfd64e783b00b054eda5b460bd02618eed  bluez-qt-83ba1bf5ee4b457dbde4250da46fbfa8f5e49a13.tar.xz
"
