# Maintainer: NekoCWD <nekodevelopper@gmail.com>
pkgname=q6meowd
pkgver=1
pkgrel=1
pkgdesc="Enable q6voice audio when call is performed with ModemManager"
url="https://gitlab.postmarketos.org/NekoCWD/q6meowd"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	alsa-lib-dev
	dbus-glib-dev
	glib-dev
	meson
	vala
	"
subpackages="$pkgname-openrc"
source="https://gitlab.postmarketos.org/NekoCWD/q6meowd/-/archive/v$pkgver.$pkgrel/q6meowd-v$pkgver.$pkgrel.tar.gz
	q6meowd.initd
	"
options="!check" # no tests
builddir="$srcdir/q6meowd-v$pkgver.$pkgrel"
provides="q6voiced=$pkgver-r$pkgrel"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install -C output
	install -Dm755 "$srcdir"/q6meowd.initd "$pkgdir"/etc/init.d/q6meowd
}

sha512sums="
