# Maintainer: Yassine Oudjana (Tooniis) <y.oudjana@protonmail.com>
pkgname=sns-reg
pkgver=0.1
pkgrel=0
pkgdesc="Qualcomm Sensor Registry Server"
url="https://gitlab.com/msm8996-mainline/sns-reg"
arch="armv7 aarch64"
license="GPL-3.0-or-later"
makedepends="scons qrtr-dev"
source="$pkgname-$pkgver.zip::$url/-/archive/$pkgver/$pkgname-$pkgver.zip"
options="!check"

build() {
	pwd
	scons
}

package() {
	install -Dm755 "$pkgname" "$pkgdir/usr/sbin/$pkgname"
	install -Dm755 "$pkgname.initd" "$pkgdir/etc/init.d/$pkgname"
	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

sha512sums="
