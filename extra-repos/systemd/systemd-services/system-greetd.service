[Unit]
Description=Greeter daemon
After=systemd-user-sessions.service plymouth-quit-wait.service
After=getty@tty1.service
Conflicts=getty@tty1.service
ConditionPathExists=/etc/conf.d/greetd

[Service]
EnvironmentFile=/etc/conf.d/greetd
Type=simple
ExecStart=greetd --config ${cfgfile}
IgnoreSIGPIPE=no
SendSIGHUP=yes
TimeoutStopSec=30s
KeyringMode=shared
Restart=always
RestartSec=1
StartLimitBurst=5
StartLimitInterval=30

[Install]
Alias=display-manager.service
