# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=wacomtablet
pkgver=99999_git20250326
pkgrel=0
_commit="b33425e2ac2eb55538e55c3ab764e9e7b88fd01b"
pkgdesc="GUI for Wacom Linux drivers that supports different button/pen layout profiles"
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
depends="xinput"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	kdoctools-dev
	kglobalaccel-dev
	ki18n-dev
	knotifications-dev
	kwidgetsaddons-dev
	kwindowsystem-dev
	kxmlgui-dev
	libplasma-dev
	libwacom-dev
	plasma5support-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	samurai
	xf86-input-wacom-dev
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/system/wacomtablet.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-04-02/wacomtablet-$_commit.tar.xz"
subpackages="$pkgname-lang $pkgname-doc"

options="!check"
builddir="$srcdir/wacomtablet-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	xvfb-run ctest --test-dir build -E "Test.KDED.DBusTabletService"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
de7a7bc820fa0fcc8e3e154de7844184dd8e9b6b3356fb0d1070ea45bce60b9bca68e9b582de43f8df33c7cea3d9548944783489889b810aaaef235079cda6b0  wacomtablet-b33425e2ac2eb55538e55c3ab764e9e7b88fd01b.tar.xz
"
