# DO NOT MERGE
# Problems with that version:
# - systemd integration doesn't work
#   (child usernamespace can't call timerfd_create, although getpcaps,pscaps report okay)
# - when no service is running, dbus activation won't work

pkgname=gnome-clocks
pkgver=9999_git20250213
_commit="3e8321e523e9b62b21399c456ca9cb3c72046e7b"
pkgrel=0
pkgdesc="Clock application"
url="https://apps.gnome.org/Clocks"
arch="all"
license="GPL-2.0-or-later"
depends="gsettings-desktop-schemas"
makedepends="
	desktop-file-utils
	geoclue-dev
	geocode-glib-dev>=3.26.4-r1
	gettext-dev
	glib-dev
	gnome-desktop-dev
	gsound-dev
	gtk4.0-dev
	itstool
	libadwaita-dev
	libcap-dev
	libgweather4-dev
	meson
	systemd-dev
	vala
	"
checkdepends="appstream-glib"
subpackages="$pkgname-lang $pkgname-doc $pkgname-systemd"
source="https://gitlab.gnome.org/GNOME/gnome-clocks/-/archive/$_commit/gnome-clocks-$_commit.tar.gz
	0001-Add-argument-to-start-initial-instance-in-the-backgr.patch
	0002-WIP.patch

	gnome-clocks.desktop
	"
builddir="$srcdir/$pkgname-$_commit"

build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

# /usr/bin/gnome-clocks is currently using setcap...
options="setcap"
makedepends="$makedepends libcap-utils"
package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output

	setcap 'cap_wake_alarm=+ep' "$pkgdir"/usr/bin/gnome-clocks

	install -Dm644 "$srcdir"/gnome-clocks.desktop \
		"$pkgdir"/etc/xdg/autostart/gnome-clocks.desktop
}

