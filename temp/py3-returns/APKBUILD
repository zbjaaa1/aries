maintainer="Aster Boese <asterboese@mailbox.org>"
pkgname=py3-returns
pkgver=0.24.0
pkgrel=0
pkgdesc="Make your functions return something meaningful, typed, and safe!"
url="https://github.com/dry-python/returns"
arch="noarch"
license="BSD-2-Clause"
depends="
	python3
	"
makedepends="
	py3-gpep517
	py3-poetry-core
	py3-setuptools
	py3-wheel
	python3-dev
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/dry-python/returns/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/returns-$pkgver"
# Tests require circular dependency
options="!check"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

# check() {
# 	python3 -m venv --clear --without-pip --system-site-packages .testenv
# 	.testenv/bin/python3 -m installer .dist/*.whl
# 	.testenv/bin/python3 -m pytest
# }

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
