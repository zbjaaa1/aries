# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
pkgname=breeze-plymouth
pkgver=99999_git20250328
pkgrel=0
_commit="c49e5349df34a74b023c3970bfc84828c57ead52"
arch="all !armhf" # armhf blocked by extra-cmake-modules
url="https://kde.org/"
pkgdesc="Breeze theme for Plymouth"
license="GPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	plymouth-dev
	samurai
	"

case "$pkgver" in
	*.90*) _rel=unstable;;
	*) _rel=stable;;
esac
_repo_url="https://invent.kde.org/plasma/breeze-plymouth.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-04-02/breeze-plymouth-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/breeze-plymouth-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DDISTRO_NAME="$(grep PRETTY_NAME /etc/os-release | awk -F  = '{ print $2 }')" \
		-DDISTRO_VERSION="$(grep VERSION_ID /etc/os-release | awk -F  = '{ print $2 }')"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
839b17441b3c71a70c60d23364b7dfa589bc32ad55e2aea21b14c220d3ffbf3cd7cb5783bdbff49cd7c34e6e414a42ecbf7981935a5307c7bf47f4ed5221d993  breeze-plymouth-c49e5349df34a74b023c3970bfc84828c57ead52.tar.xz
"
