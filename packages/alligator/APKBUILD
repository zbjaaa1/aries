# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=alligator
pkgver=99999_git20250218
pkgrel=0
_commit="349dcfd3a478dd79baac8c13049735070653c7e5"
pkgdesc="A convergent RSS/Atom feed reader"
url="https://invent.kde.org/plasma-mobile/alligator/"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
license="GPL-2.0-only OR GPL-3.0-only"
depends="
	kirigami-addons
	kirigami
	qt6-qtbase-sqlite
	"
makedepends="
	extra-cmake-modules
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami-dev
	kirigami-addons-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtdeclarative-private-dev
	samurai
	syndication-dev
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/alligator.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2025-02-22/alligator-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/alligator-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
92acea4bc5e2bc370bf312d0298ce62984b80a3f0d53f0dcdba6a7c0d845fd72f9eedd567f8898acd3c67479948d8147d3e6e5112a632c1df8a6c899a0923a3b  alligator-349dcfd3a478dd79baac8c13049735070653c7e5.tar.xz
"
