maintainer="Aster Boese <asterboese@mailbox.org>"
pkgname=pyimg4
pkgver=0.8.7
pkgrel=0
pkgdesc="A Python library/CLI tool for parsing Apple's Image4 format."
url="https://github.com/m1stadev/PyIMG4"
arch="noarch"
license="MIT"
depends="
	py3-click
	py3-hatchling
	py3-lzfse
	py3-lzss
	py3-pycryptodome
	py3-python-asn1
	py3-remotezip
	py3-uv-dynamic-versioning
	python3
	"
makedepends="
	lzfse-dev
	py3-gpep517
	py3-hatchling
	py3-lzfse
	py3-lzss
	py3-poetry-dynamic-versioning
	py3-pycryptodome
	py3-python-asn1
	py3-remotezip
	py3-setuptools
	py3-uv-dynamic-versioning
	py3-wheel
	python3-dev
	"
checkdepends="
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/m1stadev/PyIMG4/archive/refs/tags/v$pkgver.tar.gz
	0001-revert-dbe8d48.patch
	"
builddir="$srcdir/PyIMG4-$pkgver"

build() {
	export UV_DYNAMIC_VERSIONING_BYPASS="$pkgver"
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	 python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
