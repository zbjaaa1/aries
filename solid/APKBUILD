# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=solid
pkgver=9999_git20240911
pkgrel=0
_commit="c0c40e3592ac46d2fd3bfac84109b27f06a8cf90"
pkgdesc="Hardware integration and detection"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="qt6-qtdeclarative-dev"
makedepends="$depends_dev
	bison
	doxygen
	eudev-dev
	extra-cmake-modules
	flex-dev
	qt6-qttools-dev
	samurai
	udisks2-dev
	upower-dev
	"
_repo_url="https://invent.kde.org/frameworks/solid.git"
source="https://nightly.postmarketos.org/plasma-mobile/sources/2024-09-19/solid-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-libs $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/solid-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# solidmttest is broken
	ctest --test-dir build --output-on-failure -E "solidmttest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
922a1cd63fb780317d73c1793363d95e8a57c7376408a3c3f9e4d7aa76c4ef3a8466b149c10f356673d59ba9389afc11644ca3e6ed4fe889574a4fb28ac9b06a  solid-c0c40e3592ac46d2fd3bfac84109b27f06a8cf90.tar.xz
"
